<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary"
                android:orientation="vertical">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animation_view"
        android:layout_width="@dimen/_720px"
        android:layout_height="@dimen/_500px"
        android:layout_centerInParent="true"/>


    <Button
        android:id="@+id/btn_start"
        android:text="开始"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"/>

    <Button
        android:id="@+id/btn_start1"
        android:text="1"
        android:layout_toRightOf="@id/btn_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"/>

    <Button
        android:id="@+id/btn_start2"
        android:text="2"
        android:layout_toRightOf="@id/btn_start1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"/>

    <Button
        android:id="@+id/btn_start3"
        android:layout_toRightOf="@id/btn_start2"
        android:text="3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"/>

    <Button
        android:id="@+id/btn_start4"
        android:text="4"
        android:layout_above="@id/btn_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btn_start5"
        android:text="5"
        android:layout_toRightOf="@id/btn_start4"
        android:layout_above="@id/btn_start1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btn_start6"
        android:text="5"
        android:layout_toRightOf="@id/btn_start5"
        android:layout_above="@id/btn_start1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>